@model IEnumerable<MoviesPortalWebApp.Models.MovieVM>

@{
    ViewData["Title"] = "Index";
    
}



<form asp-controller="Movie" asp-action="IndexUser">
    
    
    <div class="col-sm-2">
        <input type="text" class="form-control" name="SearchString" /><input type="submit" class="btn btn-outline-light" value="Search!" />
        
    </div>    
</form>

<section id="top_movies text-light" class="clearfix">
    <div class="wrapper text-light">  
        <div class="movieBox">
            <section class="moviePoster">


            @foreach(var item in Model)
            {
                <div class="gallery">
                    <a href='@Url.Action("DetailsUser", "Movie", new {  id=item.Id  })'>
                        <img src="@item.PosterPath" alt="@item.Title">                   
                    </a>
               <div class="desc">@item.Title</div>
               </div>
            }
        </section>
        </div>
    </div>
</section>