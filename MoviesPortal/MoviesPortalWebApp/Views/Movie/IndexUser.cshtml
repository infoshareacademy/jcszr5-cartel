@model IEnumerable<MoviesPortalWebApp.Models.MovieVM>

@{
    ViewData["Title"] = "Index";
    
}


<br /><br /><br /><br />
<form asp-controller="Movie" asp-action="IndexUser">
    
    
    <div class="row">
        <div class="col-sm-7">
            <input style="margin-left: 20rem; width: 40%; display: inline-block; background-color: #000000; color: white;" type="text" class="form-control col-sm" placecholder="Search" name="SearchString" /><input type="submit" class="btn btn-outline-light col-sm-1" value="Search!" />

        </div>
</form>

<section id="top_movies text-light" class="clearfix">
    <div class="wrapper text-light">  
        <div class="movieBox">
            <section class="moviePoster">


            @foreach(var item in Model)
            {
                <div class="gallery">
                    <a href='@Url.Action("DetailsUser", "Movie", new {  id=item.Id  })'>
                        <img src="@item.PosterPath" alt="@item.Title">                   
                    </a>
               <div class="desc">@item.Title</div>
               </div>
            }
        </section>
        </div>
    </div>
</section>