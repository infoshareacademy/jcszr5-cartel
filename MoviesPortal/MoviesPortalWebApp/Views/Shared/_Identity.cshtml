@using Microsoft.AspNetCore.Identity;

@inject UserManager<DataAccess.Models.ApplicationUser> UserManager;


@if(!User.Identity.IsAuthenticated)
{

    <a class="btn btn-outline-success loginButton my-2 my-sm-0" asp-controller="Account" asp-action="Login">
        <i class="bi bi-box-arrow-in-right"></i> Log in
    </a>
    <span style="padding: 5px;"></span>

    <a class="btn btn-outline-primary registerButton my-2 my-sm-0" asp-controller="Account" asp-action="Register">
        <i class="bi bi-person-plus"></i> Register
    </a>  
} 
else 
{
     <div class="dropdown">
            <i class="bi bi-person-badge"></i> Hello: @UserManager.GetUserName(User)
    </div>

    <span style="padding: 5px;"></span>
 
    <form asp-controller="Account" asp-action="Logout">
        <button class="btn btn-outline-danger my-2 my-sm-0">
            <i class="bi bi-box-arrow-in-right"></i> Logout
        </button>
    </form>

   



}

