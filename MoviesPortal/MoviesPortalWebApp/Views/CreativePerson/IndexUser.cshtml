@model IEnumerable<MoviesPortalWebApp.Models.CreativePersonVM>

@{
    ViewData["Title"] = "IndexUser";
}

<h1>Creative Persons List</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhotographyPath)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) 
{
        <tr>
            <td>
                @Html.Raw(string.Format("{0} {1}",item.Name,item.SurName))
            </td> 
             <td>
                <div class="col-md-6">
                    <a href='@Url.Action("DetailsUser", "CreativePerson", new {  id=item.Id  })'>
                    <img src="@item.PhotographyPath" width="40%" alt="@item.Name">
                    </a>
               </div>
           </td>
        </tr>
}
    </tbody>
</table>
